---
import Meta from "../components/Meta.astro";
import TopBar from "../components/TopBar.astro";
import "../styles/global.css";
import type { Metadata } from "../components/meta";

type Props = Metadata;

const { title, description, thumbnail, alt, author, language } = Astro.props;
---

<!doctype html>
<html lang={language}>
    <head>
        <Meta
            title={title}
            description={description}
            thumbnail={thumbnail}
            alt={alt}
            author={author}
            language={language}
        />
    </head>
    <body class="bg-sky-100 text-black dark:bg-gray-900 dark:text-white">
        <header class="bg-sky-500/50 sticky top-0 rounded m-4">
            <TopBar />
        </header>
        <slot />
    </body>
</html>
